.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 10rpx;
}

.date-display {
  font-size: 30rpx;
  color: var(--text-main);
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  border: 1px solid rgba(255, 255, 255, 0.9);
  font-weight: 700;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.04);
}

/* 日期选择 */
.date-scroll {
  white-space: nowrap;
  margin-bottom: 56rpx;
  height: 100rpx;
}

.date-list {
  display: flex;
  padding-right: 32rpx;
  padding-left: 10rpx;
}

.date-chip {
  display: inline-flex;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50rpx;
  margin-right: 28rpx;
  color: var(--text-sub);
  border: 1px solid rgba(255, 255, 255, 0.8);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  backdrop-filter: blur(8px);
}

.date-chip.active {
  background: var(--primary-gradient);
  color: white;
  box-shadow: 0 12rpx 30rpx rgba(98, 70, 234, 0.4);
  border-color: transparent;
  transform: scale(1.1) translateY(-4rpx);
}

.chip-text {
  font-size: 28rpx;
  font-weight: 700;
}

/* 仪表盘 */
.dashboard-grid {
  display: flex;
  justify-content: space-between;
  gap: 28rpx;
  margin-bottom: 64rpx;
}

.stat-card {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 24rpx;
  border-radius: 40rpx;
}

.stat-card.primary {
  background: var(--primary-gradient);
  color: white;
  border: none;
  box-shadow: 0 20rpx 40rpx rgba(98, 70, 234, 0.3);
}

.stat-card.primary .stat-label {
  color: rgba(255, 255, 255, 0.8);
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.stat-val {
  font-size: 48rpx;
  font-weight: 900;
  margin-bottom: 12rpx;
  line-height: 1.1;
  letter-spacing: -2rpx;
}

.stat-label {
  font-size: 26rpx;
  color: var(--text-sub);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* 任务明细 */
.section-header {
  margin-bottom: 40rpx;
  padding-left: 10rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--text-main);
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  display: block;
  width: 10rpx;
  height: 40rpx;
  background: var(--secondary-color);
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.detail-list {
  margin-bottom: 80rpx;
}

.detail-card {
  display: flex;
  align-items: center;
  padding: 40rpx;
  margin-bottom: 32rpx;
}

.detail-status {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(0,0,0,0.05);
  margin-right: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s;
}

.detail-status.done {
  background: var(--secondary-gradient);
  border-color: transparent;
  box-shadow: 0 8rpx 20rpx rgba(44, 182, 125, 0.3);
}

.detail-content { flex: 1; }

.detail-name {
  font-size: 34rpx;
  font-weight: 800;
  margin-bottom: 12rpx;
  color: var(--text-main);
}

.detail-name.text-done {
  color: var(--text-sub);
  text-decoration: line-through;
  opacity: 0.6;
}

.detail-meta {
  font-size: 26rpx;
  color: var(--text-sub);
  display: flex;
  align-items: center;
  font-weight: 600;
}

.divider {
  margin: 0 20rpx;
  opacity: 0.2;
}

.detail-badge {
  font-size: 24rpx;
  background: rgba(239, 69, 101, 0.1);
  color: var(--danger-color);
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
  font-weight: 700;
}

.detail-badge.success {
  background: rgba(44, 182, 125, 0.1);
  color: var(--secondary-color);
}

/* 空状态 */
.empty-report {
  text-align: center;
  padding: 100rpx 0;
  margin-bottom: 40rpx;
  opacity: 0.7;
}

.empty-icon { font-size: 100rpx; margin-bottom: 32rpx; display: inline-block; filter: drop-shadow(0 10rpx 20rpx rgba(0,0,0,0.1)); }
.empty-text { color: var(--text-sub); font-size: 32rpx; font-weight: 700; }

/* 周报 */
.week-summary { 
  padding: 48rpx; 
  position: relative; 
  overflow: hidden; 
  background: rgba(255,255,255,0.7);
  border: 1px solid rgba(255,255,255,0.9);
}

.week-summary::after {
  content: '';
  position: absolute;
  top: -100rpx; 
  right: -100rpx; 
  width: 300rpx; 
  height: 300rpx;
  background: radial-gradient(circle, rgba(98, 70, 234, 0.1), transparent 70%);
  pointer-events: none;
}

.week-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
  border-bottom: 2rpx solid rgba(0,0,0,0.03);
  padding-bottom: 32rpx;
}

.week-title { font-size: 36rpx; font-weight: 900; color: var(--text-main); }
.week-range { font-size: 26rpx; color: var(--text-sub); font-weight: 600; }

.week-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.week-stat-item { text-align: center; }

.week-stat-item .val {
  font-size: 56rpx;
  font-weight: 900;
  color: var(--primary-color);
  margin-bottom: 12rpx;
  letter-spacing: -2rpx;
}

.week-stat-item .label { font-size: 26rpx; color: var(--text-sub); font-weight: 600; }

.week-divider {
  width: 2rpx;
  height: 100rpx;
  background: rgba(0,0,0,0.05);
}

/* AI 点评 */
.ai-comment-section {
  margin-top: 48rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.8), rgba(98, 70, 234, 0.08));
  border-radius: 32rpx;
  padding: 40rpx;
  border: 1px solid rgba(98, 70, 234, 0.2);
  box-shadow: 0 12rpx 30rpx rgba(98, 70, 234, 0.08);
}

.ai-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: 900;
  color: var(--primary-color);
  margin-bottom: 24rpx;
}

.ai-btn-text {
  font-size: 26rpx;
  background: var(--primary-gradient);
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(98, 70, 234, 0.3);
  font-weight: 700;
}

.ai-content {
  font-size: 30rpx;
  color: var(--text-main);
  line-height: 1.8;
  text-align: justify;
  font-weight: 500;
}
