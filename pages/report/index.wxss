.container {
  padding: 40rpx;
}

.date-text {
  text-align: center;
  color: #666;
  margin-bottom: 32rpx;
}

.metrics-card, .week-card {
  border: 4rpx solid #222;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  background-color: #fff;
}

.metric-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.metric-row:last-child {
  margin-bottom: 0;
}

.metric-label {
  font-size: 32rpx;
  color: #333;
}

.metric-value {
  font-size: 40rpx;
  font-weight: 700;
}

.week-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.subtitle {
  font-size: 36rpx;
  font-weight: 600;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.day-scroll {
  width: 100%;
  white-space: nowrap;
}

.day-list {
  display: flex;
  padding-bottom: 20rpx;
}

.day-chip {
  border: 4rpx solid #222;
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
  margin-right: 16rpx;
  display: inline-block;
}

.day-chip-active {
  background-color: #111;
}

.day-text {
  font-size: 32rpx;
  color: #111;
}

.day-text-active {
  color: #fff;
}
