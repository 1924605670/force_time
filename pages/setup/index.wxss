.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 10rpx;
}

.streak-badge {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  padding: 12rpx 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  color: var(--accent-color);
  font-weight: 800;
  font-size: 28rpx;
  border: 1px solid rgba(255, 255, 255, 1);
  box-shadow: 0 8rpx 20rpx rgba(255, 137, 6, 0.2);
  transform: rotate(-2deg); /* Playful tilt */
}

.streak-icon { margin-right: 12rpx; font-size: 32rpx; }

/* Input Area */
.input-area { 
  margin-bottom: 48rpx; 
  padding: 40rpx;
}

.input-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.mt-30 { margin-top: 32rpx; }

.name-input { 
  flex: 1; 
  height: 104rpx;
  font-weight: 600;
}

.ai-btn {
  width: 104rpx;
  height: 104rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--primary-gradient);
  border-radius: 32rpx;
  box-shadow: 0 16rpx 32rpx -8rpx rgba(98, 70, 234, 0.4);
  transition: all 0.2s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.ml-20 { margin-left: 20rpx; }
.ai-btn-hover { transform: scale(0.9); filter: brightness(1.1); }
.ai-icon { font-size: 48rpx; color: white; }

.add-btn {
  height: 104rpx;
  border-radius: 32rpx;
  font-size: 34rpx;
  letter-spacing: 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-btn.disabled {
  background: #e0e6ed;
  box-shadow: none;
  color: #a0aec0;
  pointer-events: none;
}

/* Task List */
.section-title {
  font-size: 36rpx;
  font-weight: 800;
  margin-bottom: 32rpx;
  color: var(--text-main);
  padding-left: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.total-badge {
  font-size: 26rpx;
  color: var(--primary-color);
  background: rgba(98, 70, 234, 0.1);
  padding: 10rpx 24rpx;
  border-radius: 24rpx;
  font-weight: 700;
  margin-right: 10rpx;
  border: 1px solid rgba(98, 70, 234, 0.2);
}

.section-title::before {
  content: '';
  display: block;
  width: 10rpx;
  height: 36rpx;
  background: var(--primary-color);
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.task-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  transition: all 0.3s ease;
  border-left: 8rpx solid transparent;
}

.task-card:active { transform: scale(0.98); background: rgba(255,255,255,0.8); }

.task-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.task-index {
  width: 72rpx;
  height: 72rpx;
  background: rgba(98, 70, 234, 0.1);
  color: var(--primary-color);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 800;
  font-size: 32rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
}

.task-content { flex: 1; }

.task-name-input {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-main);
  border-bottom: 2px dashed rgba(0,0,0,0.08);
  padding: 8rpx 0;
  width: 95%;
  transition: border-color 0.3s;
}

.task-name-input:focus {
  border-bottom-color: var(--primary-color);
}

.task-meta-edit {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: var(--text-sub);
  margin-top: 12rpx;
}

.task-time-input {
  width: 80rpx;
  text-align: center;
  border-bottom: 2px dashed rgba(0,0,0,0.08);
  margin: 0 10rpx;
  color: var(--primary-color);
  font-weight: 700;
  font-size: 32rpx;
}

.task-time-input:focus {
  border-bottom-color: var(--primary-color);
}

.task-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  font-size: 32rpx;
  transition: all 0.2s;
  background: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(255,255,255,1);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.action-btn.icon-btn { color: var(--text-sub); }

.action-btn.delete {
  background: rgba(239, 69, 101, 0.1);
  color: var(--danger-color);
  border-color: rgba(239, 69, 101, 0.2);
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 160rpx 0;
  opacity: 0.8;
  animation: fadeIn 0.8s ease-out;
}

.empty-icon { 
  font-size: 120rpx; 
  margin-bottom: 40rpx; 
  display: inline-block;
  filter: drop-shadow(0 20rpx 40rpx rgba(0,0,0,0.1));
}

.empty-text { font-size: 40rpx; font-weight: 800; margin-bottom: 16rpx; color: var(--text-main); }
.empty-sub { font-size: 30rpx; color: var(--text-sub); }

/* Footer */
.footer-spacer { height: 200rpx; }

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx 48rpx 60rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(40px);
  -webkit-backdrop-filter: blur(40px);
  z-index: 100;
  border-top: 1px solid rgba(255,255,255,0.6);
  box-shadow: 0 -20rpx 60rpx rgba(0,0,0,0.05);
}

.btn-lg {
  height: 120rpx;
  font-size: 38rpx;
  width: 100%;
  border-radius: 40rpx;
  letter-spacing: 4rpx;
  box-shadow: 0 20rpx 40rpx -10rpx rgba(98, 70, 234, 0.4);
}

/* Modal / Bottom Sheet Styles */
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(4px);
  z-index: 900;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.bottom-sheet {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(30px);
  z-index: 1000;
  border-radius: 48rpx 48rpx 0 0;
  padding: 48rpx;
  padding-bottom: 80rpx; /* Safe area */
  transform: translateY(100%);
  transition: transform 0.4s cubic-bezier(0.19, 1, 0.22, 1);
  box-shadow: 0 -20rpx 60rpx rgba(0,0,0,0.1);
  border-top: 1px solid rgba(255,255,255,0.8);
}

.bottom-sheet.show {
  transform: translateY(0);
}

.sheet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.sheet-title {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--text-main);
}

.close-btn {
  font-size: 48rpx;
  color: var(--text-sub);
  padding: 10rpx;
  line-height: 1;
}

.sheet-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.import-textarea {
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  line-height: 1.5;
}

.import-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
}

/* Loading State */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  animation: fadeIn 0.5s;
}

.loading-spinner {
  width: 100rpx;
  height: 100rpx;
  border: 10rpx solid rgba(98, 70, 234, 0.1);
  border-left-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 48rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-quote {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-main);
  text-align: center;
  margin-bottom: 24rpx;
  padding: 0 40rpx;
  line-height: 1.4;
}

.loading-sub {
  font-size: 28rpx;
  color: var(--text-sub);
}
