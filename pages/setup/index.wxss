.container {
  padding: 40rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.total-time {
  background-color: #f0f0f0;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
}

.title {
  font-size: 56rpx;
  font-weight: 600;
  text-align: left;
  margin-bottom: 0;
}

.streak-badge {
  display: flex;
  align-items: center;
  background-color: #fff0f0;
  padding: 12rpx 20rpx;
  border-radius: 30rpx;
  border: 2rpx solid #ffcccc;
}

.streak-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.streak-text {
  font-size: 28rpx;
  color: #d00;
  font-weight: 700;
}

.form {
  margin-bottom: 30rpx;
}

.input-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.flex-1 {
  flex: 1;
  margin-bottom: 0;
}

.icon-btn {
  width: 88rpx;
  height: 88rpx;
  background-color: #eee;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  border: 4rpx solid #222;
}

.list {
  margin-top: 20rpx;
}

.task-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 4rpx solid #222;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.task-info {
  flex: 1;
}

.task-name {
  font-size: 36rpx;
  font-weight: 600;
}

.task-sub {
  font-size: 28rpx;
  color: #666;
  margin-top: 8rpx;
}

.actions {
  display: flex;
  gap: 12rpx;
}

.btn-small {
  padding: 10rpx 20rpx;
  background-color: #eee;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.btn-delete {
  padding: 10rpx 20rpx;
  background-color: #f8eaea;
  color: #b00000;
  border-radius: 12rpx;
  font-size: 28rpx;
}
