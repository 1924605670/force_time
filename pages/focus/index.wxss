.container {
  padding: 40rpx;
}

.card {
  border: 4rpx solid #222;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  background-color: #fff;
  text-align: center;
}

.item-title {
  font-size: 44rpx;
  font-weight: 700;
}

.item-sub {
  font-size: 32rpx;
  color: #666;
  margin-top: 12rpx;
}

.timer-container {
  position: relative;
  width: 400rpx;
  height: 400rpx;
  margin: 40rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.progress-canvas {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.timer-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}

.timer-value {
  font-size: 80rpx;
  font-weight: 700;
  color: #111;
  line-height: 1;
}

.timer-unit {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.metrics {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.metric-box {
  flex: 1;
  text-align: center;
}

.metric-label {
  font-size: 28rpx;
  color: #555;
}

.metric-value {
  font-size: 40rpx;
  font-weight: 700;
  margin-top: 12rpx;
}

.btn-start {
  background-color: #0a7;
}

.btn-pause {
  background-color: #f60;
}

.btn-finish {
  background-color: #111;
}

.btn-next {
  background-color: #333;
}

.btn-end {
  background-color: #555;
}
