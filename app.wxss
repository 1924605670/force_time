/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page {
  background-color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

/* 极简通用组件样式 */
.title {
  font-size: 56rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 32rpx;
}

.big-btn {
  background-color: #111;
  color: #fff;
  font-size: 40rpx;
  font-weight: 700;
  padding: 32rpx;
  border-radius: 28rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.big-btn-disabled {
  background-color: #999;
}

.input-box {
  border: 4rpx solid #222;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
